<Defs>

<!-- 127mmTypeC -->
<ThingCategoryDef>
  <defName>Ammo127mmTypeCShells</defName>
  <label>127mm/50 shells</label>
  <parent>AMCShells</parent>
  <iconPath>Things/Projectile/127mmTypeCHE</iconPath>
</ThingCategoryDef>
<!-- ==================== AmmoSet ========================== -->

<CombatExtended.AmmoSetDef>
	<defName>AmmoSet_127mmTypeC_Shells</defName>
	<label>127mm/50 Ammunitions</label>
	<ammoTypes>
		<Ammo_127mmTypeC_HE>Bullet_127mmTypeC_HE</Ammo_127mmTypeC_HE>
	</ammoTypes>
  <isMortarAmmoSet>true</isMortarAmmoSet>	<!-- Delete if not artillery -->
</CombatExtended.AmmoSetDef>

<!-- ==================== Ammo ========================== -->

<ThingDef Class="CombatExtended.AmmoDef" Name="127mmTypeCBase" ParentName="AmmoBase" Abstract="True">
  	<description>Ammunitions for 127mm/50 gun</description>
  	<statBases>
			<MaxHitPoints>200</MaxHitPoints>
  	</statBases>
  	<thingCategories>
			<li>Ammo127mmTypeCShells</li>
  	</thingCategories>
  	<stackLimit>25</stackLimit>
  	<cookOffFlashScale>30</cookOffFlashScale>
  	<cookOffSound>MortarBomb_Explode</cookOffSound>
		<isMortarAmmo>true</isMortarAmmo>	<!-- Delete if not artillery -->
</ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" Name="127mmTypeCBaseCraftableBase" ParentName="127mmTypeCBase" Abstract="True">
  	<tradeTags>
		<li>CE_AutoEnableTrade</li>
		<li>CE_AutoEnableCrafting_TableMachining</li>
  	</tradeTags>  	
  	<comps>
			<li Class="CompProperties_Explosive">
	      	<explosiveRadius>3</explosiveRadius>
		  		<explosiveDamageType>Bomb</explosiveDamageType>
		  		<!--<explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>-->
		  		<startWickHitPointsPercent>0.7</startWickHitPointsPercent>
		  		<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		  		<explodeOnKilled>True</explodeOnKilled>
		  		<wickTicks>30~60</wickTicks>
			</li>
  	</comps>
</ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="127mmTypeCBaseCraftableBase">
  	<defName>Ammo_127mmTypeC_HE</defName>
  	<label>12.7cm Type 1 HE (HE)</label>
  	<graphicData>
		<texPath>Things/Projectile/127mmTypeCHE</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<!--<graphicClass>Graphic_StackCount</graphicClass>-->
		<drawSize>1.1</drawSize>
  	</graphicData>
  	<statBases>	  
		<MarketValue>121.17</MarketValue>
		<Mass>33.57</Mass>
		<Bulk>35.29</Bulk>
  	</statBases>
  	<ammoClass>GrenadeHE</ammoClass>
  	<!-- ammo class choices:
  	ArmorPiercing, Sabot, IncendiaryAP, ExplosiveAP, IncendiaryFuel, GrenadeHE, GrenadeIncendiary, RocketHEAT, Antigrain, RadiationIonising -->
  	<detonateProjectile>Bullet_127mmTypeC_HE</detonateProjectile>
</ThingDef>

<!-- ================== Projectiles ================== -->

<ThingDef Name="Base127mmTypeCShell" ParentName="BaseBullet" Abstract="true">
  	<graphicData>
    	<shaderType>TransparentPostLight</shaderType>
  	</graphicData>
  	<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>1</speed>
			<flyOverhead>false</flyOverhead>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Mote_BigShell</casingMoteDefname>
		</projectile>
</ThingDef>


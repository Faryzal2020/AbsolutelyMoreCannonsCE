</ThingCategoryDef>
<!-- ==================== AmmoSet ========================== -->

<CombatExtended.AmmoSetDef>
	<defName>AmmoSet_75mmPAK40_Shells</defName>
	<label>75mm Pak40 Ammunitions</label>
	<ammoTypes>
		<Ammo_75mmPAK40_APHE>Bullet_75mmPAK40_APHE</Ammo_75mmPAK40_APHE>

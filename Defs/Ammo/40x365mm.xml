			<texPath>Things/Projectile/40x365mm/AP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
  	</graphicData>
  	<statBases>	  
			<MarketValue>4.14</MarketValue>
			<Mass>2.15</Mass>
			<Bulk>4.44</Bulk>
  	</statBases>
  	<ammoClass>ArmorPiercing</ammoClass>

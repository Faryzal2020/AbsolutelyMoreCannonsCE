</ThingDef>

<ThingDef Class="CombatExtended.AmmoDef" ParentName="xxBaseCraftableBase">
  	<defName>Ammo_xx_HE</defName>
  	<label>yy (HE)</label>
  	<graphicData>
		<texPath>Things/Projectile/xx</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<!--<graphicClass>Graphic_StackCount</graphicClass>-->
		<drawSize>1.1</drawSize>
  	</graphicData>
  	<statBases>	  
		<MarketValue>35</MarketValue>
		<Mass>1</Mass>
		<Bulk>1</Bulk>
  	</statBases>
  	<ammoClass>GrenadeHE</ammoClass>
  	<!-- ammo class choices:
  	ArmorPiercing, Sabot, IncendiaryAP, ExplosiveAP, IncendiaryFuel, GrenadeHE, GrenadeIncendiary, RocketHEAT, Antigrain, RadiationIonising -->
  	<detonateProjectile>Bullet_xx_HE</detonateProjectile>
  	<comps>
		<li Class="CompProperties_Explosive">
      		<explosiveRadius>4</explosiveRadius>
	  		<explosiveDamageType>Bomb</explosiveDamageType>
	  		<!--<explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>-->
	  		<startWickHitPointsPercent>0.7</startWickHitPointsPercent>
	  		<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
	  		<explodeOnKilled>True</explodeOnKilled>
	  		<wickTicks>30~60</wickTicks>
		</li>
  	</comps>
</ThingDef>


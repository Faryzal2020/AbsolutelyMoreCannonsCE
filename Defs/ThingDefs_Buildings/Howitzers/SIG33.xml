<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseArtilleryBuilding">
    <defName>M15cmSIG33_Turret</defName>
    <label>15cm sIG 33 Howitzer</label>
    <description>Uses the 150mm I Gr 33 Shell with 4m explosive radius. 15m min range, 150m max range. Has a reload rate of 20 seconds. Able to shoot over walls.</description>
    <graphicData>
        <texPath>Things/Building/M15cmSIG33</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>(11,11)</drawSize>
        <damageData>
          <rect>(0.2,0.2,0.6,0.6)</rect>
          <cornerTL>Damage/Corner</cornerTL>
        </damageData>
        <shadowData>
          <offset>(0,0,0)</offset>
          <volume>(2,1.5,2)</volume>
        </shadowData>
    </graphicData>
	  <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>4500</WorkToBuild>
      <Mass>200</Mass>
    </statBases>
	  <!--<comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
    </comps> -->
    <interactionCellOffset>(0,0,-2)</interactionCellOffset>
    <size>(3,3)</size> 
    <costStuffCount>350</costStuffCount>
    <constructionSkillPrerequisite>2</constructionSkillPrerequisite>
	  <costList Inherit="False">
      <Plasteel>5</Plasteel>
      <ComponentIndustrial>3</ComponentIndustrial>  
    </costList>
    <tradeTags>
      <li>CE_Turret</li>
    </tradeTags>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building Inherit="False">
      <turretGunDef>Turret_M15cmSIG33_Weapon</turretGunDef>
	    <turretTopDrawSize>11</turretTopDrawSize>
      <turretBurstWarmupTime>2</turretBurstWarmupTime>
      <turretBurstCooldownTime>2</turretBurstCooldownTime>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
        <li>Artillery_MannedMortar</li>
        <li>Artillery</li>
      </buildingTags>
    </building>
	  <!--<researchPrerequisites Inherit = "False">
      <li>sIG33Howitzer</li>
    </researchPrerequisites>-->
  <uiIconPath>Things/Icons/M15cmSIG33_MenuIcon</uiIconPath>
  <uiIconScale>0.9</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Turret_M15cmSIG33_Weapon</defName>
    <label>15cm sIG 33 Howitzer</label>
    <description>Uses the 150mm I Gr 33 Shell with 5m explosive radius. 15m min range, 700m max range. Has a reload rate of 15 seconds. Able to shoot over walls.</description>
    <graphicData>
      <texPath>Things/Building/M15cmSIG33_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <drawRotated>true</drawRotated>
    </graphicData>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
      <li>TurretGun</li>
    </weaponTags>

    <statBases>
      <SightsEfficiency>1</SightsEfficiency>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootMortarCE</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_150mmIGR33_HE</defaultProjectile>
        <warmupTime>1</warmupTime>
        <minRange>15</minRange>
        <range>700</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Sound_sIG33</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>40</muzzleFlashScale>
        <circularError>0</circularError>
        <indirectFirePenalty>0</indirectFirePenalty>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_Charges">
        <chargeSpeeds>
          <li>30</li>
          <li>50</li>
          <li>70</li>
          <li>90</li>
        </chargeSpeeds>
      </li>
      <li Class="CompProperties_ChangeableProjectile" />
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>15</reloadTime>
        <ammoSet>AmmoSet_150mmIGR33_Shells</ammoSet>
      </li>
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Ammo150mmIGR33Shells</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Ammo150mmIGR33Shells</li>
          </categories>
          <disallowedThingDefs>
          </disallowedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  
</Defs>
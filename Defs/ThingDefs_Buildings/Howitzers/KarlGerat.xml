<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- M60cmKarlGerat -->
  <ThingDef ParentName="AMCArtilleryBase">
    <defName>M60cmKarlGerat_Turret</defName>
    <label>60cm Karl Gerät Howitzer</label>
      <description>Uses the 60cm schwere Betongranate HE shell with 8m explosive radius. 25m min range, 400m max range. Has reload rate of 40 seconds. Able to shoot over walls. Consumes 500W of power.</description>
    <graphicData>
        <texPath>Things/Building/M60cmKarlGerat</texPath>
        <graphicClass>Graphic_Single</graphicClass>
        <drawSize>(14,14)</drawSize>
        <damageData>
          <rect>(0.2,0.2,0.6,0.6)</rect>
          <cornerTL>Damage/Corner</cornerTL>
        </damageData>
        <shadowData>
          <offset>(0,0,0)</offset>
          <volume>(2,1.5,2)</volume>
        </shadowData>
    </graphicData>
	  <comps>
      <!--<li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li> -->
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
    </comps>
    <interactionCellOffset>(3,0,-4)</interactionCellOffset>
    <size>(7,7)</size> 
    <costStuffCount>1600</costStuffCount>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
	  <costList Inherit="False">
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>10</ComponentIndustrial>  
    </costList>
    <statBases>
      <MaxHitPoints>3000</MaxHitPoints>
      <Flammability>0.7</Flammability>
      <WorkToBuild>17000</WorkToBuild>
      <Mass>200</Mass>
    </statBases>
    <tradeTags>
      <li>CE_Turret</li>
    </tradeTags>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building Inherit="False">
      <turretGunDef>Turret_M60cmKarlGerat_Weapon</turretGunDef>
	    <turretTopDrawSize>14</turretTopDrawSize>
      <turretBurstWarmupTime>2</turretBurstWarmupTime>
      <turretBurstCooldownTime>2</turretBurstCooldownTime>
      <buildingTags>
        <li>Artillery_BaseDestroyer</li>
        <li>Artillery_MannedMortar</li>
        <li>Artillery</li>
      </buildingTags>
    </building>
	  <!--<researchPrerequisites Inherit = "False">
      <li>ArtilleryGun</li>
    </researchPrerequisites>-->
    <uiIconPath>Things/Icons/M60cmKarlGerat_MenuIcon</uiIconPath>
    <uiIconScale>0.9</uiIconScale>
  </ThingDef>

  <ThingDef ParentName="BaseArtilleryWeapon">
    <defName>Turret_M60cmKarlGerat_Weapon</defName>
    <label>60cm Karl Gerät Howitzer</label>
    <description>Uses the 60cm schwere Betongranate HE shell with 16m explosive radius. 25m min range, 800m max range. Has reload rate of 40 seconds. Able to shoot over walls. Consumes 500W of power.</description>
    <graphicData>
      <texPath>Things/Building/M60cmKarlGerat_Top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <weaponTags>
      <li>Artillery_BaseDestroyer</li>
      <li>TurretGun</li>
    </weaponTags>

    <statBases>
      <SightsEfficiency>0.9</SightsEfficiency>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootMortarCE</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_600mmKarlGerat_HE</defaultProjectile>
        <warmupTime>1</warmupTime>
        <minRange>25</minRange>
        <range>800</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Sound_600mm</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>60</muzzleFlashScale>
        <circularError>1</circularError>
        <indirectFirePenalty>0.1</indirectFirePenalty>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_Charges">
        <chargeSpeeds>
          <li>30</li>
          <li>50</li>
          <li>70</li>
          <li>90</li>
        </chargeSpeeds>
      </li>
      <li Class="CompProperties_ChangeableProjectile" />
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>40</reloadTime>
        <ammoSet>AmmoSet_600mmKarlGerat_Shells</ammoSet>
      </li>
    </comps>
    <building>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>Ammo600mmKarlGeratShells</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Ammo600mmKarlGeratShells</li>
          </categories>
          <disallowedThingDefs>
          </disallowedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
  
</Defs>